resource "aws_opensearch_domain" "database" {
  domain_name    = "${local.project_name}-${var.environment}-opensearch"
  engine_version = "OpenSearch_2.11"
  
  cluster_config {
    instance_type = var.database_instance_class
    instance_count = var.environment == "production" ? 2 : 1
  }
  
  ebs_options {
    ebs_enabled = true
    volume_type = "gp3"
    volume_size = 20
  }
  
  vpc_options {
    subnet_ids         = aws_subnet.private[*].id
    security_group_ids = [aws_security_group.opensearch.id]
  }
  
  encrypt_at_rest {
    enabled = true
  }
  
  node_to_node_encryption {
    enabled = true
  }
  
  domain_endpoint_options {
    enforce_https = true
    tls_security_policy = "Policy-Min-TLS-1-2-2019-07"
  }
  
  access_policies = jsonencode({
    Version = "2012-10-17",
    Statement = [
      {
        Effect = "Allow",
        Principal = {
          AWS = "*"
        },
        Action = "es:*",
        Resource = "arn:aws:es:${var.aws_region}:${data.aws_caller_identity.current.account_id}:domain/${local.project_name}-${var.environment}-opensearch/*"
      }
    ]
  })
  
  tags = merge(local.common_tags, {
    Name = "${local.project_name}-${var.environment}-opensearch"
  })
}
{{/isElasticsearch}}

